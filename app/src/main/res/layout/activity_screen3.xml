<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_screen"
    tools:context=".Screen3">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="111dp"
        android:foregroundGravity="center"
        android:layout_height="72dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="51dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="124dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="500dp"
        />

    <EditText
        android:id="@+id/nameText"
        android:hint="Имя"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="@color/green_text"
        android:backgroundTint="@color/green_frame"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="177dp"
        android:paddingStart="16dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"/>

    <EditText
        android:id="@+id/famText"
        android:textColorHint="@color/green_text"
        android:backgroundTint="@color/green_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="238dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Фамилия"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="255dp"
        android:paddingStart="16dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"/>

    <EditText
        android:id="@+id/mailText"
        android:textColorHint="@color/green_text"
        android:backgroundTint="@color/green_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="298dp"
        android:layout_marginRight="16dp"
        android:hint="E-mail"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="352dp"
        android:paddingStart="16dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        />

    <EditText
        android:id="@+id/passText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="358dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Пароль"
        android:textColorHint="@color/green_text"
        android:backgroundTint="@color/green_frame"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="431dp" />

    <EditText
        android:id="@+id/secondPassText"
        android:textColorHint="@color/green_text"
        android:backgroundTint="@color/green_frame"
        android:paddingStart="16dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Повторите пароль"
        android:ems="10"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="497dp"
        android:layout_marginTop="418dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="511dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="@color/red"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="571dp"
        app:cornerRadius="4dp"
        android:paddingTop="32px"
        android:paddingBottom="32px"
        android:paddingLeft="13px"
        android:paddingRight="13px"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:onClick="registry"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="571dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/white"
        android:text="У меня уже есть аккаунт"
        android:textAlignment="center"
        android:textColor="@color/red"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="647dp"
        app:cornerRadius="4dp"
        android:paddingTop="32px"
        android:paddingBottom="32px"
        android:paddingLeft="13px"
        android:paddingRight="13px"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>